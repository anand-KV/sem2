<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fff">


    <TextView
        android:id="@+id/fb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="30sp"
        android:typeface="serif"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="facebook"
        android:layout_marginBottom="30dp"
        android:background="#00008B"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fbtoggle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:text="facebook"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="#06A7F1"
        android:textSize="50sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/fbtoggle"
        android:padding="2dp"
        android:text="email:"
        android:textSize="15sp"
        android:textColor="#00008B"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:id="@+id/mailtype"
        android:layout_below="@+id/email"
        android:layout_marginTop="13dp"
        android:background="#06A7F1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@+id/mailtype"
        android:text="password:"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="15sp"
        android:textColor="#00008b"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/passwrd_toggle"
        android:layout_below="@+id/password"
        android:layout_marginTop="13dp"
        android:background="#06A7F1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/check"
        android:layout_below="@+id/passwrd_toggle"
        android:layout_marginTop="13dp"
        android:text="save the details"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#00008b"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box"
        android:layout_below="@+id/check"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2.5dp"
    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/button"
        android:layout_below="@+id/box"
        android:layout_marginTop="13dp"
        android:text="login"
        android:typeface="serif"
        android:textStyle="bold"
        android:backgroundTint="#00008b"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"/>


</RelativeLayout>
